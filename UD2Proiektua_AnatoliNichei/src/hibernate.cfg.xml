<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mariadb://localhost/chinook</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.default_schema">chinook</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <mapping resource="model/Genre.hbm.xml" />
        <mapping resource="model/Artist.hbm.xml" />
        <mapping resource="model/Album.hbm.xml" />
        <mapping resource="model/User.hbm.xml" />
    </session-factory>
</hibernate-configuration>

