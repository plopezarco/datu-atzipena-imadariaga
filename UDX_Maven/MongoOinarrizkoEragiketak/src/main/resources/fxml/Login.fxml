<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="340.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.uni.dam2.mongodbproiektua.controller.LoginController">
   <children>
      <Label fx:id="lbl_title" alignment="CENTER" layoutX="-2.0" layoutY="7.0" prefHeight="35.0" prefWidth="340.0" text="Login">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="btn_cancel" layoutX="62.0" layoutY="257.0" mnemonicParsing="false" onAction="#cancel" prefHeight="69.0" prefWidth="87.0" text="✘" textFill="RED">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Button>
      <Button fx:id="btn_ok" layoutX="197.0" layoutY="257.0" mnemonicParsing="false" onAction="#confirm" prefHeight="69.0" prefWidth="93.0" text="✔" textFill="#18ff00">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Button>
      <TextField fx:id="txt_username" layoutX="52.0" layoutY="54.0" prefHeight="48.0" prefWidth="237.0" promptText="Username" />
      <PasswordField fx:id="txt_password" layoutX="52.0" layoutY="121.0" prefHeight="48.0" prefWidth="237.0" promptText="Password" />
      <PasswordField fx:id="txt_password2" layoutX="52.0" layoutY="189.0" prefHeight="48.0" prefWidth="237.0" promptText="Repeat Password" />
   </children>
</AnchorPane>
