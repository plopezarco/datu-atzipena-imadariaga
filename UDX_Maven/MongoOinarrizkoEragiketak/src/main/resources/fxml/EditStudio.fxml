<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="402.0" prefWidth="341.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.uni.dam2.mongodbproiektua.controller.EditStudioController">
   <children>
      <TextField fx:id="txt_edit_name" layoutX="57.0" layoutY="6.0" prefHeight="43.0" prefWidth="226.0" promptText="Enter the name of the studio" />
      <ImageView fx:id="img_studio" fitHeight="162.0" fitWidth="220.0" layoutX="60.0" layoutY="55.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="45.0" layoutY="285.0" prefHeight="28.0" prefWidth="67.0" text="Founded:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txt_edit_year" layoutX="133.0" layoutY="281.0" prefHeight="37.0" prefWidth="153.0" promptText="Enter the year " />
      <Button fx:id="btn_img" layoutX="19.0" layoutY="233.0" mnemonicParsing="false" text="Choose an Image" onAction="#imageChooser" />
      <Label fx:id="lbl_imagePath" layoutX="142.0" layoutY="225.0" prefHeight="43.0" prefWidth="166.0"/>
      <Button fx:id="btn_edit_ok" layoutX="193.0" layoutY="328.0" mnemonicParsing="false" onAction="#confirm" prefHeight="68.0" prefWidth="93.0" text="✔" textFill="#18ff00">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Button>
      <Button fx:id="btn_edit_cancel" layoutX="57.0" layoutY="328.0" mnemonicParsing="false" onAction="#cancel" prefHeight="68.0" prefWidth="93.0" text="✘" textFill="RED">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
